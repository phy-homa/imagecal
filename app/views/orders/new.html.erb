<%= form_with model:@order_mailing, url: orders_path, class:"order-form", local: true do |f| %>
  <%= f.label :postal_code, "郵便番号" %>
  <%= f.text_field :postal_code %><br />

  <%= f.label :prefecture_id, "都道府県" %>
  <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, { class:"prefecture-select" })%><br />

  <%= f.label :city, "市区町村" %>
  <%= f.text_field :city %><br />

  <%= f.label :address, "番地" %>
  <%= f.text_field :address %><br />

  <%= f.label :building, "建物名" %>
  <%= f.text_field :building %><br />

  <%= f.label :tel, "電話番号" %>
  <%= f.text_field :tel %><br />

  <%= f.submit "購入", class:"button" %>
<% end %>


 
