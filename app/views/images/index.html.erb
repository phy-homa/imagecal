<div class="page">
  
  <div class= "main">
    <div class="app_info">
      アプリ概要
    </div>
  <h1>新着順</h1>
  <div class="picture_posts">
    <% @images.each do |image| %>
      <div class="content_box">
        <div class="picture_box">
          <%= link_to (image_tag image.picture.variant(resize: '330x220')), image_path(image.id)%>
        </div>
        <div class="user_info_box">
          <%= link_to image.user.nickname, user_path(image.user.id) %>
          <% image.tags.each do |tag|%>
            <%= "##{tag.name}" %>
          <% end%>
        </div>
      </div>
    <% end %>
  </div>
  <% if user_signed_in? %>
      <div class="bottom-menu">
        <div class="image-post-link">
          <%= link_to (image_tag 'icon_post.png', class:"post-icon"), new_image_path, class:"image_post"%>
          <p>投稿する</p>
        </div>
        <% unless @cart.nil? %>
          <div class="cart-inside">
            <%= link_to (image_tag 'icon_cart.png', class:"cart-icon"), cart_path(@cart.id) %>
            <p>カートを見る</p>
          </div>
        <% end %>
      </div>
    <% end %>
</div>
