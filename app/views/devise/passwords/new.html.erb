<div class="main">
  <p class="devise-title">パスワードをお忘れですか?</p>
  <div class="devise-form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"long-box" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワード案内を送信", class:"change-password-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>