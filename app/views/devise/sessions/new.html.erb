<div class="main">
  <p class="devise-title">Imagecalにログイン</p>
  <div class="user-login-method">
      <p class="login-method">SNS認証でログイン：</p>
      <div>
        <%= link_to (image_tag 'google-icon.png', class:"login-icon"), user_google_oauth2_omniauth_authorize_path, method: :post %><br />
      </div>
      <div>
        <%= link_to (image_tag 'facebook-icon.png', class:"login-icon"), user_facebook_omniauth_authorize_path, method: :post %><br />
      </div>
    </div>
  <div class="devise-form">
    <p class="login-method">メールでログイン：</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"long-box" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード"%><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class:"devise-btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
