<div class="main">
  <p class="devise-title">＜Imagecalにログイン＞</p>
  <div class="devise-login-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"email-box" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード"%><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class:"devise-btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
